<div class="container">
  <h1 class='text-center'><%= @list.name %></h1>
  <%= link_to "Back to Lists", root_path, class:'btn btn-primary' %>
  <%= link_to "New Bookmark", new_list_bookmark_path(list_id:@list), class:'btn btn-primary' %>
    <div class="row">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card" style="width: 18rem;">
          <div class="card-body">
              <%= image_tag bookmark.movie.poster_url, alt: "poster", width: 100, class:"card-img-top" %>
              <h3 class="card-title"><%= bookmark.movie.title %></h3>
              <p class="card-text"><%= bookmark.movie.overview %></p>
              <h5 class="user-comment"><%= bookmark.comment %></h5>
              <%= link_to "Delete", bookmark_path(bookmark), class:"btn btn-danger", method: 'delete', data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      <% end %>
    </div>
</div>
